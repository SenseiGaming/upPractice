<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RecyclerViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".AdminFragment">

    <TextView
        android:id="@+id/textViewAdminFragmentSecondName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Фамилия: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAdminFragmentFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Имя: "
        app:layout_constraintStart_toStartOf="@+id/textViewAdminFragmentSecondName"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminFragmentSecondName" />

    <TextView
        android:id="@+id/textViewAdminFragmentThirdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Отчество: "
        app:layout_constraintStart_toStartOf="@+id/textViewAdminFragmentFirstName"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminFragmentFirstName" />

    <TextView
        android:id="@+id/textViewAdminFragmentPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Специальность: "
        app:layout_constraintStart_toStartOf="@+id/textViewAdminFragmentThirdName"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminFragmentThirdName" />

    <TextView
        android:id="@+id/textViewAdminFragmentDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Описание: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAdminFragmentPost" />
</androidx.constraintlayout.widget.ConstraintLayout>
